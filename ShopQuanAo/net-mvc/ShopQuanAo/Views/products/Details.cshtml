@model ShopQuanAo.Models.product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">CHI TIẾT SẢN PHẨM</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/assets/images/products/@Html.DisplayFor(modelItem => Model.images)" class="img-fluid" alt="Product Image">
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">ID sản phẩm</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.id_product)</dd>

                        <dt class="col-sm-3">Tên sản phẩm</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.name_product)</dd>

                        <dt class="col-sm-3">Giá mới</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.price_new)</dd>

                        <dt class="col-sm-3">Giá cũ</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.price_old)</dd>

                        <dt class="col-sm-3">Mô tả</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.describe)</dd>

                        <dt class="col-sm-3">Số lượng</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.quantity)</dd>

                        <dt class="col-sm-3">Thương hiệu</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Brand.brand_name)</dd>

                        <dt class="col-sm-3">Danh mục con</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.subCategory.name_subcate)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="form-actions no-color mt-3">
        <a href="@Url.Action("Edit", new { id = Model.id_product })" class="btn btn-primary">Chỉnh sửa</a> |
        @Html.ActionLink("Trở về trang trước", "Index")
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f8f8;
        color: #333;
        padding: 20px;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: box-shadow 0.3s;
    }

    .card-header {
        padding: 20px;
    }

    h2 {
        margin: 0;
    }

    .img-fluid {
        width: 100%;
        height: auto;
    }

    dl {
        margin-top: 10px;
    }

    dt, dd {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    .form-actions {
        margin-top: 20px;
    }
</style>
