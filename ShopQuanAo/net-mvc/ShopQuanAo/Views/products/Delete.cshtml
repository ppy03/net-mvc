    
@model ShopQuanAo.Models.product
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<h2>XÓA</h2>
<h3>Bạn có chắc muốn xóa sản phẩm này?</h3>
<div>
    <hr />
    <table>
        <tr>
            <th>Property</th>
            <th>Value</th>
        </tr>
        <tr>
            <td>STT</td>
            <td>@Html.DisplayFor(model => model.stt)</td>
        </tr>
        <tr>
            <td>Tên sản phẩm</td>
            <td>@Html.DisplayFor(model => model.name_product)</td>
        </tr>
        <tr>
            <td>Hình ảnh</td>
            <td>

                <img src="~/assets/images/products/@Model.images" alt="Image" class="product-image">
            </td>
        </tr>
        <td>Gía cũ</td>
        <td>@Html.DisplayFor(model => model.price_old)</td>
        </tr>
        <tr>
            <td>Gía mới</td>
            <td>@Html.DisplayFor(model => model.price_new)</td>
        </tr>
        <tr>
            <td>Mô tả</td>
            <td>@Html.DisplayFor(model => model.describe)</td>
        </tr>
        <tr>
            <td>Số lượng</td>
            <td>@Html.DisplayFor(model => model.quantity)</td>
        </tr>
        <tr>
            <td>Thương hiệu</td>
            <td>@Html.DisplayFor(model => model.Brand.brand_name)</td>
        </tr>
        <tr>
            <td>Thể loại</td>
            <td>@Html.DisplayFor(model => model.subCategory.name_subcate)</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Trở về trang trước", "Index")
        </div>
    }
</div>
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f8f8;
        color: #333;
        padding: 20px;
    }

    h2 {
        color: #007bff;
        font-size: 28px;
        margin-bottom: 20px;
    }

    h3 {
        color: #dc3545;
        font-size: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: #fff;
    }

    .form-actions {
        margin-top: 20px;
    }

    .btn-default {
        background-color: #dc3545;
        color: #fff;
        transition: background-color 0.3s;
        font-size: 16px;
        padding: 10px 20px;
    }

        .btn-default:hover {
            background-color: #c82333;
        }

    .product-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 4px;
    }
</style>
