@model IEnumerable<ShopQuanAo.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container">
    <h2>QUẢN LÝ TÀI KHOẢN</h2>
    <div class="create-button-container">
        @Html.ActionLink("Tạo mới", "Create", null, new { @class = "create-button" })
    </div>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr class="center">
                    <th>Email</th>
                    <th>Tên đăng nhập</th>
                    <th>Số điện thoại</th>
                    <th>Mật khẩu</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.email</td>
                        <td>@item.name_user</td>
                        <td>@item.phonenumber</td>
                        <td>@item.pass</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.id_user })" class="action-link"><i class="fas fa-edit"></i></a>
                            <a href="@Url.Action("Details", new { id = item.id_user })" class="action-link"><i class="fas fa-info-circle"></i></a>
                            <a href="@Url.Action("Delete", new { id = item.id_user })" class="action-link"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    .create-button-container {
        text-align: right;
        margin-bottom: 20px;
    }

    .create-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        .create-button:hover {
            background-color: #45a049;
        }

    .table-container {
        border: 1px solid #ddd;
        border-radius: 4px;
        overflow: hidden;
        margin-top: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            vertical-align: middle;
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: #F0FFF0; /* Màu xanh nhạt */
        }

        .table tbody tr:nth-child(odd) {
            background-color: #ffffff; /* Màu trắng */
        }

    .product-image {
        width: 100%;
        height: 50px;
        object-fit: cover;
        border-radius: 4px;
    }

    .action-link {
        margin-right: 5px;
        color: #555;
        text-decoration: none;
        font-size: 18px;
    }

        .action-link:hover {
            color: #000;
        }

    .table td.category-column {
        width: 150px; /* Đặt chiều rộng cố định cho cột danh mục */
    }

    .table td.category-column {
        width: 150px;
    }
</style>
