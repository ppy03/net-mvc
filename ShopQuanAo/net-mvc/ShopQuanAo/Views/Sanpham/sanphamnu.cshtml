
@{
    ViewBag.Title = "Thời Trang Nữ";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="body-content outer-top-xs" id="top-banner-and-menu">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-3 sidebar">

                <div class="side-menu animate-dropdown outer-bottom-xs" style="margin-top:10px">
                    <div class="head" style="background-color:#108bea; color:white"><i class="icon fa fa-align-justify fa-fw"></i> DANH MỤC</div>
                    <nav class="yamm megamenu-horizontal">
                        <ul class="nav">

                            @{
                                var SubcategoriesMen = new HashSet<string>();
                                foreach (var name in ViewBag.subCategories)
                                {
                                    if (name.id_cate == 2 && SubcategoriesMen.Add(name.name_subcate))
                                    {
                                        <li class="dropdown menu-item">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon fa fa-shopping-bag" aria-hidden="true"></i>@name.name_subcate</a>

                                            <!-- /.dropdown-menu -->
                                        </li>
                                    }
                                }
                            }







                        </ul>
                        <!-- /.nav -->
                    </nav>
                    <!-- /.megamenu-horizontal -->
                </div>

                <div class="sidebar-widget outer-bottom-small wow fadeInUp">
                    <h3 class="section-title">Gợi ý cho bạn</h3>
                    <div class="sidebar-widget-body outer-top-xs">
                        <div class="owl-carousel sidebar-carousel special-offer custom-carousel owl-theme outer-top-xs">
                            @foreach (var productGroup in ViewBag.productsspbki)
                            {
                                <div class="item">
                                    <div class="products special-product">
                                        @foreach (var product in productGroup)
                                        {
                                            <div class="product">
                                                <div class="product-micro">
                                                    <div style="margin-top: 10px;margin-bottom:10px;" class="row product-micro-row">
                                                        <div class="col col-xs-5">
                                                            <div class="product-image">
                                                                <div class="image">
                                                                    <a href="~/Detail/Detail?MASANPHAM=@product.id_product"> <img style="height:80px;" src="~/assets\images\products\@product.images" alt=""> </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col col-xs-7">
                                                            <div class="product-info">
                                                                <h3 class="name"><a href="~/Detail/Detail?MASANPHAM=@product.id_product">@product.name_product</a></h3>
                                                                <div class="rating rateit-small"></div>
                                                                <div class="product-price"> <span class="price">@product.price_new VND </span> </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="sidebar-widget outer-bottom-small wow fadeInUp">
                    <h3 class="section-title">Xu hướng</h3>
                    <div class="sidebar-widget-body outer-top-xs">
                        <div class="owl-carousel sidebar-carousel special-offer custom-carousel owl-theme outer-top-xs">
                            @foreach (var productGroups in ViewBag.productsmax)
                            {
                                <div class="item">
                                    <div class="products special-product">
                                        @foreach (var products in productGroups)
                                        {
                                            <div class="product">
                                                <div class="product-micro">
                                                    <div style="margin-top: 10px;margin-bottom:10px;" class="row product-micro-row">
                                                        <div class="col col-xs-5">
                                                            <div class="product-image">
                                                                <div class="image">
                                                                    <a href="~/Detail/Detail?MASANPHAM=@products.id_product"> <img style="height:80px;" src="~/assets\images\products\@products.images" alt=""> </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col col-xs-7">
                                                            <div class="product-info">
                                                                <h3 class="name"><a href="~/Detail/Detail?MASANPHAM=@products.id_product">@products.name_product</a></h3>
                                                                <div class="rating rateit-small"></div>
                                                                <div class="product-price"> <span class="price">@products.price_new VND </span> </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="sidebar-widget product-tag wow fadeInUp outer-top-vs">
                    <h3 class="section-title">THƯƠNG HIỆU</h3>
                    <div class="sidebar-widget-body outer-top-xs">
                        <div class="tag-list">
                            @foreach (var tagname in ViewBag.brands)
                            {
                                <a class="item" title="@tagname.brand_name" href="category.html">@tagname.brand_name</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-9 homebanner-holder">


                <div class='col-md-9' style="width: 100%; padding:0px">
                    <!-- ========================================== SECTION – HERO ========================================= -->



                    <div class="clearfix filters-container m-t-10">
                        <div class="row">
                            <div class="col col-sm-6 col-md-2">
                                <div class="filter-tabs">
                                    <ul id="filter-tabs" class="nav nav-tabs nav-tab-box nav-tab-fa-icon">
                                        <li class="active"> <a data-toggle="tab" href="#grid-container"><i class="icon fa fa-th-large"></i>Grid</a> </li>
                                        <li><a data-toggle="tab" href="#list-container"><i class="icon fa fa-th-list"></i>List</a></li>
                                    </ul>
                                </div>
                                <!-- /.filter-tabs -->
                            </div>
                            <!-- /.col -->
                            <div class="col col-sm-12 col-md-6">
                                <div class="col col-sm-3 col-md-6 no-padding">
                                    <div class="lbl-cnt">
                                        <span class="lbl">Sort by</span>
                                        <div class="fld inline">
                                            <div class="dropdown dropdown-small dropdown-med dropdown-white inline">
                                                <button data-toggle="dropdown" type="button" class="btn dropdown-toggle"> Position <span class="caret"></span> </button>
                                                <ul role="menu" class="dropdown-menu">
                                                    <li role="presentation"><a href="#">position</a></li>
                                                    <li role="presentation"><a href="#">Price:Lowest first</a></li>
                                                    <li role="presentation"><a href="#">Price:HIghest first</a></li>
                                                    <li role="presentation"><a href="#">Product Name:A to Z</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <!-- /.fld -->
                                    </div>
                                    <!-- /.lbl-cnt -->
                                </div>
                                <!-- /.col -->
                                <div class="col col-sm-3 col-md-6 no-padding">
                                    <div class="lbl-cnt">
                                        <span class="lbl">Show</span>
                                        <div class="fld inline">
                                            <div class="dropdown dropdown-small dropdown-med dropdown-white inline">
                                                <button data-toggle="dropdown" type="button" class="btn dropdown-toggle"> 1 <span class="caret"></span> </button>
                                                <ul role="menu" class="dropdown-menu">
                                                    <li role="presentation"><a href="#">1</a></li>
                                                    <li role="presentation"><a href="#">2</a></li>
                                                    <li role="presentation"><a href="#">3</a></li>
                                                    <li role="presentation"><a href="#">4</a></li>
                                                    <li role="presentation"><a href="#">5</a></li>
                                                    <li role="presentation"><a href="#">6</a></li>
                                                    <li role="presentation"><a href="#">7</a></li>
                                                    <li role="presentation"><a href="#">8</a></li>
                                                    <li role="presentation"><a href="#">9</a></li>
                                                    <li role="presentation"><a href="#">10</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <!-- /.fld -->
                                    </div>
                                    <!-- /.lbl-cnt -->
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.col -->
                            <div class="col col-sm-6 col-md-4 text-right">
                                <div class="pagination-container">
                                    <ul class="list-inline list-unstyled">
                                        <li class="prev"><a href="#"><i class="fa fa-angle-left"></i></a></li>
                                        <li><a href="#">1</a></li>
                                        <li class="active"><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
                                        <li><a href="#">4</a></li>
                                        <li class="next"><a href="#"><i class="fa fa-angle-right"></i></a></li>
                                    </ul>
                                    <!-- /.list-inline -->
                                </div>
                                <!-- /.pagination-container -->
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <div class="search-result-container ">
                        <div id="myTabContent" class="tab-content category-list">
                            <div class="tab-pane active " id="grid-container">
                                <div class="category-product">
                                    <div class="row">

                                        @{
                                            var productsBabies = ViewBag.productall;
                                        }
                                        @foreach (var item in productsBabies)
                                        {
                                            if (item.subCategory.id_cate == 2)
                                            {
                                                <div class="col-sm-6 col-md-4 wow fadeInUp" style="margin-bottom:20px; border: 1px solid #ccc">
                                                    <div class="products">
                                                        <div class="product">
                                                            <div class="product-image">
                                                                <div class="image"> <a href="~/Detail/Detail?MASANPHAM=@item.id_product"><img src="~/assets\images\products\@item.images" style="height:250px;" alt=""></a> </div>
                                                                <!-- /.image -->

                                                                <div class="tag new"><span>new</span></div>
                                                            </div>
                                                            <!-- /.product-image -->

                                                            <div class="product-info text-left">
                                                                <h3 class="name"><a href="~/Detail/Detail?MASANPHAM=@item.id_product">@item.name_product</a></h3>
                                                                <div class="rating rateit-small"></div>
                                                                <div class="description"></div>
                                                                <div class="product-price"> <span class="price"> @item.price_new VND </span> <span class="price-before-discount">@item.price_new VND</span> </div>
                                                                <!-- /.product-price -->
                                                                <button class="buynow"><a href="#">BUY NOW</a></button>
                                                            </div>
                                                            <style>
                                                                .buynow {
                                                                    background-color: #108bea;
                                                                    border: none;
                                                                    border-radius: 10px;
                                                                    width: 80px;
                                                                    height: 30px;
                                                                    margin-left: 86px;
                                                                }

                                                                    .buynow:hover {
                                                                        cursor: pointer;
                                                                        background-color: #428bca;
                                                                    }

                                                                    .buynow a {
                                                                        color: white;
                                                                    }
                                                            </style>
                                                            <!-- /.product-info -->
                                                            <div class="cart clearfix animate-effect">
                                                                <div class="action">
                                                                    <ul class="list-unstyled">
                                                                        <li class="add-cart-button btn-group">
                                                                            <button class="btn btn-primary icon" data-toggle="dropdown" type="button"> <i class="fa fa-shopping-cart"></i> </button>
                                                                            <button class="btn btn-primary cart-btn" type="button">Add to cart</button>
                                                                        </li>
                                                                        <li class="lnk wishlist"> <a class="add-to-cart" href="detail.html" title="Wishlist"> <i class="icon fa fa-heart"></i> </a> </li>
                                                                        <li class="lnk"> <a class="add-to-cart" href="detail.html" title="Compare"> <i class="fa fa-signal"></i> </a> </li>
                                                                    </ul>
                                                                </div>
                                                                <!-- /.action -->
                                                            </div>
                                                            <!-- /.cart -->
                                                        </div>
                                                        <!-- /.product -->

                                                    </div>
                                                    <!-- /.products -->
                                                </div>
                                            }
                                        }
                                    </div>
                                    <!-- /.row -->
                                </div>
                                <!-- /.category-product -->

                            </div>
                            <!-- /.tab-pane -->
                            <!-- /.tab-pane #list-container -->
                        </div>
                        <!-- /.tab-content -->
                        <!-- /.filters-container -->

                    </div>
                    <!-- /.search-result-container -->

                </div>
            </div>
            <div class="wide-banners wow fadeInUp outer-bottom-xs">
                <div class="row">
                    <div class="col-md-12">
                        <div class="wide-banner cnt-strip">
                            <div class="image"> <img class="img-responsive" src="~/assets\images\banners\home-banner.jpg" alt=""> </div>
                            <div class="strip strip-text">
                                <div class="strip-inner">
                                    <h2 class="text-right">
                                        Thời trang nam mới<br>
                                        <span class="shopping-needs">Tiết kiệm tới 40%</span>
                                    </h2>
                                </div>
                            </div>
                            <div class="new-label">
                                <div class="text">MỚI</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
