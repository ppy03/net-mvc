@model ShopQuanAo.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_LayoutPage.cshtml";
}

<h2>THÔNG TIN TÀI KHOẢN</h2>
<div>
    <hr />
    <table>
        <tr>
            <th>Property</th>
            <th>Value</th>
        </tr>
        <tr>
            <td>Email</td>
            <td>@Html.DisplayFor(model => model.email)</td>
        </tr>
        <tr>
            <td>Tên Đăng nhập</td>
            <td>@Html.DisplayFor(model => model.name_user)</td>
        </tr>
        <td>Số điện thoại</td>
        <td>@Html.DisplayFor(model => model.phonenumber)</td>
        </tr>
        <tr>
            <td>Mật khẩu</td>
            <td>@Html.DisplayFor(model => model.pass)</td>
        </tr>
    </table>
    <div class="form-actions no-color mt-3">
        <a href="@Url.Action("Edit", new { id = Model.id_user })" class="btn btn-primary">Chỉnh sửa</a> |
        @Html.ActionLink("Trở về trang trước", "Index")
    </div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f8f8;
        color: #333;
      
        padding:0px;
        margin:0px;
    }

    h2 {
        color: #007bff;
        font-size: 28px;
        margin-bottom: 20px;
    }

    h3 {
        color: #dc3545;
        font-size: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: #fff;
    }

    .form-actions {
        margin-top: 20px;
    }

    .btn-default {
        background-color: #dc3545;
        color: #fff;
        transition: background-color 0.3s;
        font-size: 16px;
        padding: 10px 20px;
    }

        .btn-default:hover {
            background-color: #c82333;
        }

    .product-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 4px;
    }
</style>

